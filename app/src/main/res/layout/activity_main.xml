<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:text="Select Location"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinlocation"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Select Room Type"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinroomtype"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Please select the Check in date"
      android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkin"
        android:text="Select Check-in-date"
        android:padding="15dp"
        android:textSize="25dp"
        android:textColor="#150"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Please select the Check out date"
      android:textSize="20dp"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/checkout"
      android:text="Check-out-date"
      android:padding="15dp"
      android:textSize="25dp"
      android:textColor="#150"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="43dp"
      android:text="Enter the number of People"
      android:textSize="20dp"/>
  <LinearLayout
      android:id="@+id/relative"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">


  <EditText
      android:id="@+id/TextView01"
      android:layout_width="match_parent"
      android:layout_height="?android:attr/listPreferredItemHeight"
      android:layout_weight="1"
      android:hint="Adults"
      android:inputType="number"
      android:textColor="#150"></EditText>

  <EditText
      android:id="@+id/TextView02"
      android:layout_width="match_parent"
      android:layout_height="?android:attr/listPreferredItemHeight"
      android:layout_alignParentLeft="true"
      android:layout_weight="1"
      android:hint="Child"
      android:inputType="number"
      android:textColor="#150"></EditText>

  <EditText
      android:id="@+id/TextView03"
      android:layout_width="match_parent"
      android:layout_height="?android:attr/listPreferredItemHeight"
      android:layout_alignParentRight="true"
      android:layout_weight="1"
      android:hint="Room"
      android:inputType="number"
      android:textColor="#150"
      ></EditText>
  </LinearLayout>
</LinearLayout>
